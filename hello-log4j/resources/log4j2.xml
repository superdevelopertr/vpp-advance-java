<configuration status="INFO">
	<Appenders>
		<File name="file" filename="myapp.log">
			<PatternLayout>
				<Pattern>%d %p %c{1.} {%t} %m %ex %n</Pattern>
			</PatternLayout>
		</File>
		<Console name = "STDOUT" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%c.%M Message:%m\n</Pattern>
			</PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
		<Logger level="TRACE" name="com.ailhanli.Another" additivity="false">
			<AppenderRef ref="STDOUT"/>
		</Logger>
		<ROOT level="INFO">
			<AppenderRef ref="file"/>
			<AppenderRef ref="STDOUT" level="ERROR"/>
		</ROOT>
	</Loggers>
</configuration>